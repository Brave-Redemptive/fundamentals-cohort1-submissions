    {
      "name": "Load Testing",
      "item": [
        {
          "name": "Bulk Create - 10 Notifications",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// This script will be run 10 times using Collection Runner",
                  "const timestamp = Date.now();",
                  "pm.collectionVariables.set(\"timestamp\", timestamp);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"EMAIL\",\n  \"recipient\": \"load-test-{{timestamp}}@example.com\",\n  \"subject\": \"Load Test Notification\",\n  \"message\": \"This is a load testing notification created at {{timestamp}}\",\n  \"priority\": \"MEDIUM\",\n  \"metadata\": {\n    \"test\": \"load_test\",\n    \"timestamp\": \"{{timestamp}}\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/notifications",
              "host": ["{{base_url}}"],
              "path": ["api", "notifications"]
            },
            "description": "Create multiple notifications for load testing. Run this in Collection Runner with 10+ iterations"
          },
          "response": []
        }
