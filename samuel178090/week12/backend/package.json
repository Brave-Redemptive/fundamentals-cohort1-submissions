{
  "name": "wavecom-notification-backend",
  "version": "1.0.0",
  "description": "WaveCom Scalable Notification Delivery System - Software Engineering Week 12 Challenge",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "worker": "node src/workers/notificationWorker.js",
    "worker:email": "node src/workers/emailWorker.js",
    "worker:sms": "node src/workers/smsWorker.js",
    "worker:push": "node src/workers/pushWorker.js",
    "workers:all": "concurrently \"npm run worker:email\" \"npm run worker:sms\" \"npm run worker:push\"",
    "setup": "node scripts/setup.js",
    "seed": "node scripts/seed-data.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "keywords": ["notifications", "express", "rabbitmq", "mongodb", "scalable"],
  "author": "Samuel Ajewole <josephsammy1994@gmail.com>",
  "dependencies": {
    "express": "^4.18.2",
    "amqplib": "^0.10.3",
    "mongoose": "^8.0.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "winston": "^3.11.0",
    "nodemailer": "^6.9.7",
    "twilio": "^4.19.0",
    "web-push": "^3.6.6",
    "uuid": "^9.0.1",
    "express-rate-limit": "^7.1.5",
    "dotenv": "^16.3.1",
    "socket.io": "^4.7.4",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "concurrently": "^8.2.2"
  }
}